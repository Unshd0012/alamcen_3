<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<VBox fx:id="vboxCarrito" alignment="CENTER" prefHeight="370.0" prefWidth="670.0" spacing="10" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.uns.controlador.CarritoController">
    <Label styleClass="title-label" text="CART" />
    <VBox fx:id="carritoItems" prefHeight="90.0" prefWidth="590.0" spacing="10">
        <padding>
            <Insets bottom="10" left="10" right="10" top="10" />
        </padding>
    </VBox>
    <Label fx:id="totalLabel" styleClass="total-label" text="TOTAL: $ 0.00" />
    <Button onAction="#handlePagar" styleClass="pagar-button" text="PAGAR" />
</VBox>
