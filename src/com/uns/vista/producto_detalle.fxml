<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns:fx="http://javafx.com/fxml" fx:controller="com.uns.controlador.ProductoDetalleController"  spacing="10" alignment="CENTER">
    <ImageView fx:id="productoImagen" fitWidth="200" fitHeight="200"/>
    <Label fx:id="productoNombre" styleClass="producto-nombre"/>
    <Label fx:id="productoDescripcion" styleClass="producto-descripcion" wrapText="true"/>
    <Label fx:id="productoPrecio" styleClass="producto-precio"/>
    <Button text="Add Cart" onAction="#handleAddCart" styleClass="add-cart-button"/>
</VBox>
